<UserControl x:Class="TopMenuStripe.TopMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TopMenuStripe"
             mc:Ignorable="d" 
             d:DesignHeight="20">
    <Grid>
        <Menu>
            <MenuItem x:Name="backward" Header="Backward" Click="Backward_Click"/>
            <MenuItem x:Name="forward" Header="Forward" Click="Forward_Click"></MenuItem>
        </Menu>
    </Grid>
</UserControl>
